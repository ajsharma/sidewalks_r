#!/usr/bin/env ruby
require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  puts "== Running setup =="
  system! "bin/setup --skip-server"

  puts "\n== Running tests =="
  system! "bundle exec rake test"

  puts "\n== Running security tests =="
  system! "bin/brakeman"

  # puts "\n== Regenerating swagger =="
  # system! "bundle exec rake rswag:specs:swaggerize"

  puts "\n== Running lints =="
  system! "bundle exec rubocop -A"

  puts "\n== Running YARD documentation checks =="
  system! "bundle exec yardoc --no-output --no-cache --fail-on-warning"

  puts "\n== All checks passed! =="
end
