# Brewfile for Sidewalks development environment
# Install with: brew bundle
# Update with: brew bundle --force

# Core development tools
brew "ruby"           # Ruby programming language
brew "postgresql@14"  # PostgreSQL database
brew "redis"          # Redis for caching/background jobs

# Security tools
brew "gitleaks"       # Secret scanning
brew "gnupg"          # GPG for signing commits

# Development utilities
brew "git"            # Version control
brew "gh"             # GitHub CLI
brew "yarn"           # JavaScript package manager (for assets)

# Optional but recommended
brew "direnv"         # Environment variable management per directory
brew "overmind"       # Process manager for Procfile (alternative to foreman)
