<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to ai_activities_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to suggestions
    <% end %>
  </div>

  <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900"><%= @suggestion.suggested_activity_name %></h1>
      <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
        <span><%= @suggestion.input_type.titleize %> input</span>
        <span>•</span>
        <span>Created <%= time_ago_in_words(@suggestion.created_at) %> ago</span>
        <% if @suggestion.confidence_score.present? %>
          <span>•</span>
          <span class="<%= @suggestion.confidence_score >= 66 ? 'text-green-600 font-medium' : @suggestion.confidence_score >= 31 ? 'text-yellow-600' : 'text-gray-500' %>">
            <%= @suggestion.confidence_label %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- Original Input -->
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h2 class="text-sm font-medium text-gray-700 mb-2">Original Input</h2>
      <% if @suggestion.text? %>
        <p class="text-sm text-gray-900"><%= @suggestion.input_text %></p>
      <% elsif @suggestion.url? %>
        <a href="<%= @suggestion.source_url %>" target="_blank" class="text-sm text-indigo-600 hover:text-indigo-900 flex items-center">
          <%= @suggestion.source_url %>
          <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      <% end %>
    </div>

    <!-- Failed State -->
    <% if @suggestion.failed? %>
      <div class="px-6 py-6">
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <h3 class="text-sm font-medium text-red-800">Processing failed</h3>
              <p class="mt-1 text-sm text-red-700"><%= @suggestion.error_message %></p>
            </div>
          </div>
        </div>

        <div class="mt-6 flex items-center gap-3">
          <%= link_to retry_ai_activity_path(@suggestion), method: :post, data: { turbo_method: :post }, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Retry Suggestion
          <% end %>

          <%= link_to ai_activities_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            Back to suggestions
          <% end %>

          <%= link_to ai_activity_path(@suggestion), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this suggestion?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200" do %>
            Delete
          <% end %>
        </div>
      </div>
    <!-- Edit Form -->
    <% elsif !@suggestion.accepted? %>
      <div class="px-6 py-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Review & Edit</h2>

        <%= form_with url: accept_ai_activity_path(@suggestion), method: :post, class: "space-y-6" do |form| %>
          <% suggested_data = @suggestion.suggested_data.with_indifferent_access %>

          <div>
            <%= form.label :name, "Activity Name", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name,
                  value: suggested_data[:name],
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                  required: true %>
          </div>

          <div>
            <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :description,
                  value: suggested_data[:description],
                  rows: 3,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :schedule_type, "Schedule Type", class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :schedule_type,
                    options_for_select([
                      ['Flexible - Can happen anytime', 'flexible'],
                      ['Strict - Specific date/time', 'strict'],
                      ['Deadline - Must complete by date', 'deadline'],
                      ['Recurring - Repeats on a schedule', 'recurring_strict']
                    ], suggested_data[:schedule_type]),
                    {},
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                    id: "ai_schedule_type_select" %>
            </div>

            <div>
              <%= form.label :suggested_time_of_day, "Preferred Time", class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :suggested_time_of_day,
                    options_for_select([
                      ['Flexible', ''],
                      ['Morning (6am-12pm)', 'morning'],
                      ['Afternoon (12pm-5pm)', 'afternoon'],
                      ['Evening (5pm-9pm)', 'evening'],
                      ['Night (9pm-late)', 'night']
                    ], suggested_data[:suggested_time_of_day]),
                    {},
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Suggested Months</label>
            <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-2">
              <% Date::MONTHNAMES.compact.each_with_index do |month, index| %>
                <% month_value = index + 1 %>
                <label class="relative flex items-start">
                  <div class="flex items-center h-5">
                    <%= check_box_tag "suggested_months[]",
                          month_value,
                          suggested_data[:suggested_months]&.include?(month_value),
                          class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 h-4 w-4",
                          id: "month_#{month_value}" %>
                  </div>
                  <div class="ml-2 text-sm">
                    <label for="month_<%= month_value %>" class="font-medium text-gray-700 cursor-pointer">
                      <%= month[0..2] %>
                    </label>
                  </div>
                </label>
              <% end %>
            </div>
            <p class="mt-2 text-xs text-gray-500">Leave unchecked if activity is suitable year-round</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Suggested Days of Week</label>
            <div class="grid grid-cols-7 gap-2">
              <% Date::DAYNAMES.each_with_index do |day, index| %>
                <label class="relative flex items-start">
                  <div class="flex flex-col items-center">
                    <%= check_box_tag "suggested_days_of_week[]",
                          index,
                          suggested_data[:suggested_days_of_week]&.include?(index),
                          class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 h-4 w-4",
                          id: "day_#{index}" %>
                    <label for="day_<%= index %>" class="mt-1 text-xs font-medium text-gray-700 cursor-pointer">
                      <%= day[0..2] %>
                    </label>
                  </div>
                </label>
              <% end %>
            </div>
            <p class="mt-2 text-xs text-gray-500">Leave unchecked if activity can happen any day</p>
          </div>

          <!-- Recurring Fields -->
          <div id="ai_recurring_fields" class="space-y-4" style="display: none;">
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <h3 class="text-sm font-medium text-blue-900 mb-3">Recurrence Pattern</h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                  <%= label_tag :recurrence_frequency, "Repeats", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= select_tag 'recurrence_frequency',
                      options_for_select(recurrence_frequency_options),
                      { prompt: 'Select frequency...', class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500", id: "ai_recurrence_frequency_select" } %>
                </div>
                <div>
                  <%= label_tag :recurrence_interval, "Every", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= number_field_tag 'recurrence_interval', 1,
                      { min: 1, max: 52, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500", id: "ai_recurrence_interval" } %>
                  <p class="text-xs text-gray-500 mt-1" id="ai_interval_label">week(s)</p>
                </div>
              </div>

              <!-- Weekly: Days of Week -->
              <div id="ai_weekly_options" style="display: none;" class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">On these days</label>
                <div class="flex flex-wrap gap-2">
                  <% day_of_week_options.each do |label, value| %>
                    <label class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
                      <%= check_box_tag "byday[]", value, false, class: "mr-2" %>
                      <span class="text-sm"><%= label %></span>
                    </label>
                  <% end %>
                </div>
              </div>

              <!-- Monthly: By Date or By Position -->
              <div id="ai_monthly_options" style="display: none;" class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Repeat by</label>
                <div class="space-y-3">
                  <label class="flex items-center">
                    <%= radio_button_tag 'monthly_type', 'bymonthday', true, class: "mr-2", id: "ai_monthly_by_date" %>
                    <span class="text-sm">Day of month (e.g., 15th)</span>
                  </label>
                  <div id="ai_monthday_input" class="ml-6">
                    <%= number_field_tag 'bymonthday', Date.current.day,
                        { min: 1, max: 31, class: "w-32 px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" } %>
                  </div>

                  <label class="flex items-center">
                    <%= radio_button_tag 'monthly_type', 'bysetpos', false, class: "mr-2", id: "ai_monthly_by_position" %>
                    <span class="text-sm">Position and day (e.g., 1st Sunday)</span>
                  </label>
                  <div id="ai_position_inputs" class="ml-6 grid grid-cols-2 gap-2" style="display: none;">
                    <%= select_tag 'bysetpos',
                        options_for_select(monthly_position_options),
                        { class: "px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" } %>
                    <%= select_tag 'monthly_byday',
                        options_for_select(day_of_week_options),
                        { class: "px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" } %>
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= form.label :recurrence_start_date, "Starts on", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.date_field :recurrence_start_date, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" %>
                </div>
                <div>
                  <%= form.label :recurrence_end_date, "Ends on (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.date_field :recurrence_end_date, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" %>
                </div>
              </div>
            </div>

            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
              <h3 class="text-sm font-medium text-green-900 mb-3">Event Time</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= form.label :occurrence_time_start, "Start time", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.time_field :occurrence_time_start, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" %>
                </div>
                <div>
                  <%= form.label :occurrence_time_end, "End time", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.time_field :occurrence_time_end, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" %>
                </div>
              </div>
              <div class="mt-4">
                <%= form.label :duration_minutes, "I'll attend for (minutes, optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.number_field :duration_minutes, min: 1, max: 720, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Leave blank to attend for the full event duration" %>
                <p class="text-xs text-gray-500 mt-1">If the event runs longer than you'll attend, specify your attendance duration</p>
              </div>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Category Tags</label>
            <%= form.text_field :category_tags,
                  value: suggested_data[:category_tags]&.join(', '),
                  placeholder: "outdoor, social, exercise, etc.",
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-xs text-gray-500">Comma-separated tags for organization</p>
          </div>

          <div class="flex items-center justify-between pt-4 border-t border-gray-200">
            <%= form.submit "Accept & Create Activity",
                  class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

            <div class="flex gap-2">
              <%= link_to retry_ai_activity_path(@suggestion), method: :post, data: { turbo_method: :post }, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50", title: "Get a different suggestion" do %>
                <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Get Another Suggestion
              <% end %>

              <%= link_to "Cancel", ai_activities_path,
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>

              <%= link_to reject_ai_activity_path(@suggestion),
                    method: :post,
                    data: { turbo_method: :post, turbo_confirm: "Are you sure you want to dismiss this suggestion?" },
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200" do %>
                Dismiss
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-6">
        <div class="rounded-md bg-green-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">
                This suggestion has been accepted and converted to an activity.
              </p>
              <% if @suggestion.final_activity %>
                <div class="mt-2">
                  <%= link_to "View Activity →", activity_path(@suggestion.final_activity), class: "text-sm font-medium text-green-700 hover:text-green-600" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Processing Details (for debugging) -->
  <% if @suggestion.completed? && ENV['RAILS_ENV'] == 'development' %>
    <details class="mt-4 bg-white shadow-sm rounded-lg border border-gray-200 p-4">
      <summary class="text-sm font-medium text-gray-700 cursor-pointer">Processing Details (Development)</summary>
      <div class="mt-4 space-y-2 text-xs">
        <div><strong>Model:</strong> <%= @suggestion.model_used %></div>
        <div><strong>Processing Time:</strong> <%= @suggestion.processing_time_ms %>ms</div>
        <div><strong>Cost:</strong> $<%= number_with_precision(@suggestion.processing_cost, precision: 6) %></div>
        <% if @suggestion.api_response&.dig('usage') %>
          <div><strong>Tokens:</strong> <%= @suggestion.api_response['usage']['input_tokens'] %> in, <%= @suggestion.api_response['usage']['output_tokens'] %> out</div>
        <% end %>
      </div>
    </details>
  <% end %>
</div>

<script>
  function toggleAiRecurringFields() {
    const scheduleType = document.getElementById('ai_schedule_type_select')?.value;
    const recurringFields = document.getElementById('ai_recurring_fields');

    if (recurringFields) {
      recurringFields.style.display = (scheduleType === 'recurring_strict') ? 'block' : 'none';
    }
  }

  function toggleAiRecurrenceOptions() {
    const freq = document.getElementById('ai_recurrence_frequency_select')?.value;
    const weeklyOptions = document.getElementById('ai_weekly_options');
    const monthlyOptions = document.getElementById('ai_monthly_options');
    const intervalLabel = document.getElementById('ai_interval_label');

    // Hide all
    if (weeklyOptions) weeklyOptions.style.display = 'none';
    if (monthlyOptions) monthlyOptions.style.display = 'none';

    // Update interval label
    if (intervalLabel) {
      switch(freq) {
        case 'DAILY':
          intervalLabel.textContent = 'day(s)';
          break;
        case 'WEEKLY':
          intervalLabel.textContent = 'week(s)';
          if (weeklyOptions) weeklyOptions.style.display = 'block';
          break;
        case 'MONTHLY':
          intervalLabel.textContent = 'month(s)';
          if (monthlyOptions) monthlyOptions.style.display = 'block';
          break;
        case 'YEARLY':
          intervalLabel.textContent = 'year(s)';
          break;
      }
    }
  }

  function toggleAiMonthlyType() {
    const byDate = document.getElementById('ai_monthly_by_date')?.checked;
    const monthdayInput = document.getElementById('ai_monthday_input');
    const positionInputs = document.getElementById('ai_position_inputs');

    if (monthdayInput) {
      monthdayInput.style.display = byDate ? 'block' : 'none';
    }
    if (positionInputs) {
      positionInputs.style.display = byDate ? 'none' : 'grid';
    }
  }

  function buildAiRecurrenceRule() {
    const freq = document.getElementById('ai_recurrence_frequency_select')?.value;
    if (!freq) return null;

    const interval = parseInt(document.getElementById('ai_recurrence_interval')?.value || 1);
    const rule = { freq: freq, interval: interval };

    if (freq === 'WEEKLY') {
      const checkedDays = Array.from(document.querySelectorAll('#ai_recurring_fields input[name="byday[]"]:checked'))
        .map(cb => cb.value);
      if (checkedDays.length > 0) {
        rule.byday = checkedDays;
      }
    } else if (freq === 'MONTHLY') {
      const byDate = document.getElementById('ai_monthly_by_date')?.checked;
      if (byDate) {
        const monthday = parseInt(document.querySelector('#ai_recurring_fields input[name="bymonthday"]')?.value || 1);
        rule.bymonthday = [monthday];
      } else {
        const position = parseInt(document.querySelector('#ai_recurring_fields select[name="bysetpos"]')?.value || 1);
        const day = document.querySelector('#ai_recurring_fields select[name="monthly_byday"]')?.value;
        rule.bysetpos = [position];
        rule.byday = [day];
      }
    }

    return rule;
  }

  // Initialize AI form
  document.addEventListener('DOMContentLoaded', function() {
    const aiForm = document.querySelector('form[action*="accept"]');
    const scheduleTypeSelect = document.getElementById('ai_schedule_type_select');
    const recurrenceFreqSelect = document.getElementById('ai_recurrence_frequency_select');
    const monthlyByDate = document.getElementById('ai_monthly_by_date');
    const monthlyByPosition = document.getElementById('ai_monthly_by_position');

    if (scheduleTypeSelect) {
      toggleAiRecurringFields();
      scheduleTypeSelect.addEventListener('change', toggleAiRecurringFields);
    }

    if (recurrenceFreqSelect) {
      toggleAiRecurrenceOptions();
      recurrenceFreqSelect.addEventListener('change', toggleAiRecurrenceOptions);
    }

    if (monthlyByDate && monthlyByPosition) {
      toggleAiMonthlyType();
      monthlyByDate.addEventListener('change', toggleAiMonthlyType);
      monthlyByPosition.addEventListener('change', toggleAiMonthlyType);
    }

    // Handle form submission to build recurrence_rule JSON
    if (aiForm) {
      aiForm.addEventListener('submit', function(e) {
        const scheduleType = scheduleTypeSelect?.value;
        if (scheduleType === 'recurring_strict') {
          const rule = buildAiRecurrenceRule();
          if (rule) {
            // Create hidden field with JSON
            const hiddenField = document.createElement('input');
            hiddenField.type = 'hidden';
            hiddenField.name = 'recurrence_rule';
            hiddenField.value = JSON.stringify(rule);
            aiForm.appendChild(hiddenField);
          }
        }
      });
    }
  });
</script>
