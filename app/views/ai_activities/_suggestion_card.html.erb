<%# locals: (suggestion:) %>
<div id="suggestion_<%= suggestion.id %>" class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
  <!-- Card Header -->
  <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center space-x-2">
          <h3 class="text-lg font-semibold text-gray-900">
            <%= suggestion.suggested_activity_name %>
          </h3>
          <% if suggestion.completed? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= suggestion.accepted? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
              <%= suggestion.accepted? ? '✓ Accepted' : 'Dismissed' %>
            </span>
          <% elsif suggestion.failed? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              Failed
            </span>
          <% elsif suggestion.processing? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <svg class="animate-spin -ml-0.5 mr-1.5 h-3 w-3 text-blue-800" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Processing
            </span>
          <% end %>
        </div>

        <div class="mt-1 flex items-center space-x-4 text-sm text-gray-500">
          <span class="flex items-center">
            <svg class="mr-1.5 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <%= relative_time(suggestion.created_at) %>
          </span>
          <% if suggestion.url? && suggestion.source_url.present? %>
            <span class="flex items-center">
              <svg class="mr-1.5 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
              </svg>
              From URL
            </span>
          <% end %>
          <% if suggestion.confidence_score.present? %>
            <span class="flex items-center <%= suggestion.confidence_score >= 66 ? 'text-green-600' : suggestion.confidence_score >= 31 ? 'text-yellow-600' : 'text-gray-500' %>">
              <%= suggestion.confidence_label %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Card Body -->
  <div class="px-6 py-4">
    <% if suggestion.failed? %>
      <!-- Error State -->
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-red-800">Processing failed</h3>
            <p class="mt-1 text-sm text-red-700"><%= suggestion.error_message %></p>
          </div>
        </div>
      </div>
    <% elsif suggestion.processing? || suggestion.pending? %>
      <!-- Processing State -->
      <div class="animate-pulse space-y-3">
        <div class="h-4 bg-gray-200 rounded w-3/4"></div>
        <div class="h-4 bg-gray-200 rounded w-1/2"></div>
      </div>
    <% else %>
      <!-- Completed State - Show Suggestion -->
      <% suggested_data = suggestion.suggested_data.with_indifferent_access %>

      <% if suggested_data[:description].present? %>
        <p class="text-gray-700 mb-4"><%= suggested_data[:description] %></p>
      <% end %>

      <!-- Scheduling Recommendations -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
        <div class="bg-gray-50 rounded-lg p-3">
          <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Best Months</div>
          <div class="text-sm font-medium text-gray-900">
            <% if suggested_data[:suggested_months].present? && suggested_data[:suggested_months].any? %>
              <%= suggested_data[:suggested_months].map { |m| Date::MONTHNAMES[m] }.join(', ') %>
            <% else %>
              Any time
            <% end %>
          </div>
        </div>

        <div class="bg-gray-50 rounded-lg p-3">
          <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Best Days</div>
          <div class="text-sm font-medium text-gray-900">
            <% if suggested_data[:suggested_days_of_week].present? && suggested_data[:suggested_days_of_week].any? %>
              <%= suggested_data[:suggested_days_of_week].map { |d| Date::DAYNAMES[d] }.join(', ') %>
            <% else %>
              Any day
            <% end %>
          </div>
        </div>

        <div class="bg-gray-50 rounded-lg p-3">
          <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Time of Day</div>
          <div class="text-sm font-medium text-gray-900">
            <%= suggested_data[:suggested_time_of_day]&.titleize || 'Flexible' %>
          </div>
        </div>
      </div>

      <!-- Tags -->
      <% if suggested_data[:category_tags].present? && suggested_data[:category_tags].any? %>
        <div class="flex flex-wrap gap-2 mb-4">
          <% suggested_data[:category_tags].each do |tag| %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
              <%= tag %>
            </span>
          <% end %>
        </div>
      <% end %>

      <!-- AI Reasoning (collapsible) -->
      <% if suggested_data[:reasoning].present? %>
        <details class="mt-4">
          <summary class="text-sm font-medium text-gray-700 cursor-pointer hover:text-gray-900">
            Why AI suggested this scheduling
          </summary>
          <p class="mt-2 text-sm text-gray-600 pl-4 border-l-2 border-gray-200">
            <%= suggested_data[:reasoning] %>
          </p>
        </details>
      <% end %>
    <% end %>
  </div>

  <!-- Card Footer (Actions) -->
  <% if suggestion.failed? %>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex items-center justify-between gap-4">
        <div class="flex-1 flex gap-2">
          <%= link_to retry_ai_activity_path(suggestion), method: :post, data: { turbo_method: :post }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Retry
          <% end %>

          <%= link_to ai_activity_path(suggestion), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            Delete
          <% end %>
        </div>

        <%= link_to ai_activity_path(suggestion), class: "text-sm text-indigo-600 hover:text-indigo-900" do %>
          View Details →
        <% end %>
      </div>
    </div>
  <% elsif !suggestion.accepted? && !suggestion.processing? %>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex items-center justify-between gap-4">
        <%= form_with url: accept_ai_activity_path(suggestion), method: :post, class: "flex-1 flex gap-2" do |form| %>
          <%= button_tag type: "submit", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Accept & Create Activity
          <% end %>

          <%= link_to retry_ai_activity_path(suggestion), method: :post, data: { turbo_method: :post }, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", title: "Get a different suggestion" do %>
            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Retry
          <% end %>

          <%= link_to reject_ai_activity_path(suggestion), method: :post, data: { turbo_method: :post, turbo_confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            Dismiss
          <% end %>
        <% end %>

        <%= link_to ai_activity_path(suggestion), class: "text-sm text-indigo-600 hover:text-indigo-900" do %>
          View Details →
        <% end %>
      </div>
    </div>
  <% end %>
</div>
