<%= turbo_stream_from "ai_suggestions_#{current_user.id}" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">AI Activity Suggestions</h1>
    <p class="text-gray-600">Describe an activity or paste an event URL, and AI will suggest optimal scheduling</p>
  </div>

  <%= turbo_frame_tag "ai_suggestion_form" do %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8" data-controller="ai-suggestions">
      <%= form_with url: ai_activities_generations_path, method: :post,
                    data: {
                      ai_suggestions_target: "form",
                      action: "submit->ai-suggestions#submit",
                      turbo_frame: "_top"
                    },
                    class: "space-y-4" do |form| %>

        <div>
          <label for="input" class="block text-sm font-medium text-gray-700 mb-2">
            Describe your activity or paste an event URL
          </label>
          <textarea
            name="input"
            id="input"
            rows="3"
            placeholder="e.g., 'Weekly farmers market on Saturday mornings' or 'https://example.com/event'"
            data-ai-suggestions-target="input"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
            required
          ></textarea>
          <p class="mt-2 text-sm text-gray-500">
            ðŸ’¡ Try: "Go hiking this weekend" or paste a link to an event page
          </p>
        </div>

        <div class="flex items-center justify-between">
          <div class="text-sm text-gray-500">
            <span data-ai-suggestions-target="status"></span>
          </div>

          <button
            type="submit"
            data-ai-suggestions-target="submitButton"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <svg class="hidden -ml-1 mr-2 h-4 w-4 animate-spin" data-ai-suggestions-target="spinner" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span data-ai-suggestions-target="buttonText">Generate Suggestion</span>
          </button>
        </div>
      <% end %>

      <!-- Error display -->
      <div id="ai-suggestions-errors" data-ai-suggestions-target="errors" class="hidden mt-4">
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-800" data-ai-suggestions-target="errorMessage"></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Suggestions List -->
  <div class="space-y-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Your Suggestions</h2>
      <span class="text-sm text-gray-500">
        <%= pluralize(@suggestions.size, 'suggestion') %>
      </span>
    </div>

    <div id="ai-suggestions-list" class="space-y-4">
      <% if @suggestions.any? %>
        <% @suggestions.each do |suggestion| %>
          <%= render 'suggestion_card', suggestion: suggestion %>
        <% end %>
      <% else %>
        <div class="text-center py-12 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No suggestions yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by describing an activity above</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
