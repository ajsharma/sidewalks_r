<div class="max-w-6xl mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">My Activities</h1>
    <%= link_to "New Activity", new_activity_path,
        class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
  </div>

  <% if @activities.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @activities.each do |activity| %>
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition duration-200">
          <div class="flex justify-between items-start mb-3">
            <h3 class="text-lg font-semibold text-gray-900 line-clamp-2">
              <%= link_to activity.name, activity, class: "hover:text-blue-600" %>
            </h3>
            <span class="px-2 py-1 text-xs font-medium rounded-full
              <%= case activity.schedule_type
                  when 'strict' then 'bg-red-100 text-red-800'
                  when 'flexible' then 'bg-green-100 text-green-800'
                  when 'deadline' then 'bg-yellow-100 text-yellow-800'
                  end %>">
              <%= activity.schedule_type.capitalize %>
            </span>
          </div>

          <% if activity.description.present? %>
            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              <%= activity.description %>
            </p>
          <% end %>

          <div class="space-y-2 mb-4">
            <% if activity.strict_schedule? && activity.start_time.present? %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <%= activity.start_time.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            <% end %>

            <% if activity.deadline.present? %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Deadline: <%= activity.deadline.strftime("%B %d, %Y") %>
              </div>
            <% end %>

            <% if activity.max_frequency_days.present? %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                <%= activity.max_frequency_description %>
              </div>
            <% end %>
          </div>

          <div class="flex space-x-2">
            <%= link_to "View", activity,
                class: "flex-1 text-center bg-gray-100 hover:bg-gray-200 text-gray-700 py-2 px-3 rounded transition duration-200" %>
            <%= link_to "Edit", edit_activity_path(activity),
                class: "flex-1 text-center bg-blue-100 hover:bg-blue-200 text-blue-700 py-2 px-3 rounded transition duration-200" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-400 mb-4">
        <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No activities yet</h3>
      <p class="text-gray-600 mb-6">Get started by creating your first activity!</p>
      <%= link_to "Create Activity", new_activity_path,
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
    </div>
  <% end %>
</div>
