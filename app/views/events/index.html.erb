<div class="max-w-7xl mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Discover Events</h1>
    <% if user_signed_in? %>
      <%= link_to "My Activities", activities_path,
          class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
    <% end %>
  </div>

  <%# Free Weekends Section %>
  <% if @free_weekends.any? %>
    <div class="bg-purple-50 border border-purple-200 rounded-lg p-4 mb-6">
      <h2 class="text-lg font-semibold text-purple-900 mb-2">Your Free Weekends</h2>
      <div class="flex flex-wrap gap-2">
        <% @free_weekends.each do |weekend| %>
          <%= link_to events_path(start_date: weekend[:saturday], end_date: weekend[:sunday], weekends_only: true),
              class: "px-3 py-1 bg-purple-100 hover:bg-purple-200 text-purple-800 rounded-full text-sm transition" do %>
            <%= weekend[:saturday].strftime("%b %d") %> - <%= weekend[:sunday].strftime("%d") %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="flex gap-6">
    <%# Filters Sidebar %>
    <div class="w-64 flex-shrink-0">
      <div class="bg-white rounded-lg shadow-md p-4 sticky top-4">
        <h3 class="font-semibold text-gray-900 mb-4">Filters</h3>
        <%= form_with url: events_path, method: :get, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :start_date, value: params[:start_date], class: "w-full px-3 py-2 border border-gray-300 rounded-lg" %>
          </div>

          <div>
            <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :end_date, value: params[:end_date], class: "w-full px-3 py-2 border border-gray-300 rounded-lg" %>
          </div>

          <div>
            <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :search, value: params[:search], placeholder: "Title, venue...", class: "w-full px-3 py-2 border border-gray-300 rounded-lg" %>
          </div>

          <div class="flex items-center">
            <%= f.check_box :weekends_only, { checked: params[:weekends_only] == "true", class: "mr-2" }, "true", "false" %>
            <%= f.label :weekends_only, "Weekends Only", class: "text-sm text-gray-700" %>
          </div>

          <div class="flex items-center">
            <%= f.check_box :free_only, { checked: params[:free_only] == "true", class: "mr-2" }, "true", "false" %>
            <%= f.label :free_only, "Free Events", class: "text-sm text-gray-700" %>
          </div>

          <div>
            <%= f.label :price_max, "Max Price", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.number_field :price_max, value: params[:price_max], step: "0.01", placeholder: "50.00", class: "w-full px-3 py-2 border border-gray-300 rounded-lg" %>
          </div>

          <div class="flex space-x-2">
            <%= f.submit "Apply", class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition" %>
            <%= link_to "Clear", events_path, class: "flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-lg transition" %>
          </div>
        <% end %>
      </div>
    </div>

    <%# Events Grid %>
    <div class="flex-1">
      <% if @events.any? %>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 mb-6">
          <% @events.each do |event| %>
            <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition duration-200">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-lg font-semibold text-gray-900 line-clamp-2 flex-1">
                  <%= link_to event.title, event, class: "hover:text-blue-600" %>
                </h3>
                <% if event.free? %>
                  <span class="ml-2 px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800 whitespace-nowrap">
                    Free
                  </span>
                <% elsif event.price %>
                  <span class="ml-2 px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800 whitespace-nowrap">
                    $<%= event.price %>
                  </span>
                <% end %>
              </div>

              <div class="space-y-2 mb-4">
                <div class="flex items-start text-sm text-gray-600">
                  <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span class="line-clamp-1"><%= event.start_time.strftime("%a, %b %d at %I:%M %p") %></span>
                </div>

                <% if event.venue? %>
                  <div class="flex items-start text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span class="line-clamp-1"><%= event.venue %></span>
                  </div>
                <% end %>

                <% if event.category_tags.any? %>
                  <div class="flex flex-wrap gap-1 mt-2">
                    <% event.category_tags.first(3).each do |tag| %>
                      <span class="px-2 py-0.5 text-xs bg-gray-100 text-gray-700 rounded">
                        <%= tag %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </div>

              <div class="flex space-x-2">
                <%= link_to "View Details", event,
                    class: "flex-1 text-center bg-gray-100 hover:bg-gray-200 text-gray-700 py-2 px-3 rounded transition duration-200 text-sm" %>
                <% if user_signed_in? %>
                  <%= button_to "Add to Calendar", add_to_calendar_event_path(event),
                      method: :post,
                      class: "flex-1 text-center bg-blue-600 hover:bg-blue-700 text-white py-2 px-3 rounded transition duration-200 text-sm" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <%# Pagination %>
        <% if @total_pages > 1 %>
          <div class="flex justify-center items-center space-x-2">
            <% if @page > 1 %>
              <%= link_to "← Previous", events_path(page: @page - 1, **params.except(:page, :controller, :action).permit!.to_h),
                  class: "px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition" %>
            <% end %>

            <span class="px-4 py-2 text-gray-700">
              Page <%= @page %> of <%= @total_pages %>
            </span>

            <% if @page < @total_pages %>
              <%= link_to "Next →", events_path(page: @page + 1, **params.except(:page, :controller, :action).permit!.to_h),
                  class: "px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition" %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12 bg-white rounded-lg shadow-md">
          <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No events found</h3>
          <p class="text-gray-600 mb-6">Try adjusting your filters or check back later!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
