<%= form_with(model: playlist, local: true, class: "space-y-6") do |form| %>
  <% if playlist.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-medium mb-2">Please fix the following errors:</h3>
      <ul class="text-red-700 text-sm space-y-1">
        <% playlist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name,
        class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200",
        placeholder: "Enter playlist name..." %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description,
        rows: 4,
        class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200",
        placeholder: "Describe this playlist..." %>
  </div>

  <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancel", playlists_path,
        class: "px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition duration-200" %>
    <%= form.submit playlist.persisted? ? "Update Playlist" : "Create Playlist",
        class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition duration-200" %>
  </div>
<% end %>