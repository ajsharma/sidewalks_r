<div class="max-w-6xl mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">My Playlists</h1>
    <%= link_to "New Playlist", new_playlist_path,
        class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
  </div>

  <% if @playlists.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @playlists.each do |playlist| %>
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition duration-200">
          <div class="flex justify-between items-start mb-3">
            <h3 class="text-lg font-semibold text-gray-900 line-clamp-2">
              <%= link_to playlist.name, playlist, class: "hover:text-blue-600" %>
            </h3>
            <span class="text-sm text-gray-500 bg-gray-100 px-2 py-1 rounded">
              <%= pluralize(playlist.activities_count, 'activity') %>
            </span>
          </div>

          <% if playlist.description? %>
            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              <%= playlist.description %>
            </p>
          <% end %>

          <% if playlist.activities_count > 0 %>
            <div class="mb-4">
              <div class="flex -space-x-2">
                <% playlist.activities.limit(3).each do |activity| %>
                  <div class="w-8 h-8 bg-blue-100 text-blue-800 rounded-full flex items-center justify-center text-xs font-medium border-2 border-white">
                    <%= activity.name.first.upcase %>
                  </div>
                <% end %>
                <% if playlist.activities_count > 3 %>
                  <div class="w-8 h-8 bg-gray-100 text-gray-600 rounded-full flex items-center justify-center text-xs font-medium border-2 border-white">
                    +<%= playlist.activities_count - 3 %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="flex justify-between items-center pt-4 border-t border-gray-100">
            <span class="text-xs text-gray-500">
              Updated <%= playlist.updated_at.strftime("%b %d") %>
            </span>
            <div class="flex space-x-2">
              <%= link_to "View", playlist,
                  class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
              <%= link_to "Edit", edit_playlist_path(playlist),
                  class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012 2v2M7 7h10"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No playlists yet</h3>
      <p class="text-gray-600 mb-6">Start organizing your activities by creating your first playlist.</p>
      <%= link_to "Create Your First Playlist", new_playlist_path,
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
    </div>
  <% end %>
</div>
